
    <form action="/submit" method="post" id="formContainer" class="container shadow-lg bg-light mt-5 p-3 rounded-3 d-none border border-3 border-primary ">
        <div class="row mb-2">
            <div class="col-md-6 col-12">
                <label for="title" class="form-label">Title</label>
                <input id="title" name="title" type="text" class="form-control" required>
                <div id="warning-title" class="small text-danger mt-1"></div>
            </div>
            <div class="col-md-6 col-12">
                <label for="author" class="form-label">Author</label>
                <input id="author" name="author" type="text" class="form-control" required>
                <div id="warning-author" class="small text-danger mt-1"></div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-12">
                <label for="content" class="form-label">Content</label>
                <textarea id="content" name="content" type="text" class="form-control" rows="5" required></textarea>
                <div id="warning-content" class="small text-danger mt-1"></div>
            </div>
        </div>

        <div class="d-flex mb-2">
            <button type="button" class="btn btn-secondary me-2 form-close">Close</button>
            <button type="submit" class="btn btn-primary form-submit">Submit</button>
        </div>
    </form>
