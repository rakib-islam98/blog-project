
    <form action="#" method="post" id="formEditContainer" class="container shadow-lg bg-light mt-5 p-3 rounded-3 d-none border border-3 border-primary ">
        <input type="hidden" id="post-edit-id" name="id">
        <div class="row mb-2">
            <div class="col-md-6 col-12">
                <label for="edit-title" class="form-label">Title</label>
                <input id="edit-title" name="title" type="text" class="form-control" required>
                <div id="warning-title" class="small text-danger mt-1"></div>
            </div>
            <div class="col-md-6 col-12">
                <label for="edit-author" class="form-label">Author</label>
                <input id="edit-author" name="author" type="text" class="form-control" required>
                <div id="warning-author" class="small text-danger mt-1"></div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-12">
                <label for="edit-content" class="form-label">Content</label>
                <textarea id="edit-content" name="content" type="text" class="form-control" rows="5" required></textarea>
                <div id="warning-content" class="small text-danger mt-1"></div>
            </div>
        </div>

        <div class="d-flex mb-2">
            <button type="button" class="btn btn-secondary me-2 post-edit-close">Close</button>
            <button type="submit" class="btn btn-primary post-edit-save">Save</button>
        </div>
    </form>

